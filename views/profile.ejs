<%- include partials/header %>
    <div class="container">
        <br />
        <h2>My Profile</h2>
        <br />
        <div class="row">
            <div class="col-md-12">
            	<table class="table">
					<thead>
						<tr>
							<th scope="col">Id</th>
							<th scope="col">Username</th>
                            <th scope="col">First Name</th>
                            <th scope="col">Last Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Gender</th>
                            <th scope="col">Terms & Con.</th>
							<th scope="col">Date</th>
						</tr>
					</thead>
                <tbody>
                    <tr>
                        <th><%= user.id %></th>
                        <td><%= user.username %></td>
                        <td><%= user.firstname %></td>
                        <td><%= user.lastname %></td>
                        <td><%= user.email %></td>
                        <td><%= user.gender %></td>
                        <td><%= user.agreement %></td>
                        <td><%= moment(user.created_at).format( 'MMM-DD-YYYY HH:MM:ss') %></td>
                    </tr>
                </tbody>
                </table>
            </div>
        </div>
    </div>
    
<%- include partials/footer %>