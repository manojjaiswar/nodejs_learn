<%- include partials/header %>
<div class="container">
	<div class="col-md-6 col-md-offset-3">
		<br />
		<h2> Edit User</h2>
		<br />
		<form action="edit_user/<%= user.id %>" method="post">
			<div class="form-group">
				<label for="email"><strong>Username</strong></label>
				<input type="text" class="form-control" name="username" value="<%= user[0].username %>">
			</div>
			<div class="form-group">
				<label for="email"><strong>First Name</strong></label>
				<input type="text" class="form-control" name="firstname" value="<%= user[0].firstname %>">
			</div>
			<div class="form-group">
				<label for="email"><strong>Last Name</strong></label>
				<input type="text" class="form-control" name="lastname" value="<%= user[0].lastname %>">
			</div>
			<div class="form-group">
				<label for="email"><strong>Email</strong></label>
				<input type="email" class="form-control" name="email" value="<%= user[0].email %>">
			</div>
			<div class="form-check-inline form-group">
				<% if(user[0].gender == 'Male'){ %>
				<div class="form-check">
					<label class="form-check-label">
						<input type="radio" class="form-check-input" name="gender" value="Male" checked>Male
					</label>
				</div>
				<div class="form-check">
					<label class="form-check-label">
						<input type="radio" class="form-check-input" name="gender" value="Female">Female
					</label>
				</div>
				<% } %>
				<% if(user[0].gender == 'Female'){ %>
				<div class="form-check">
					<label class="form-check-label">
						<input type="radio" class="form-check-input" name="gender" value="Male">Male
					</label>
				</div>
				<div class="form-check">
					<label class="form-check-label">
						<input type="radio" class="form-check-input" name="gender" value="Female" checked>Female
					</label>
				</div>
				<% } %>
			</div>

			<% if(user[0].agreement > 0){ %>
			<div class="form-group">
				<input type="checkbox" name="<%= user[0].agreement %>" checked />
				<label>
					<a href="#">I accept Terms & Conditions</a>
				</label>
			</div>
			<% } else{ %>
			<div class="form-group">
				<input type="checkbox" name="<%= user[0].agreement %>" />
				<label>
					<a href="#">I accept Terms & Conditions</a>
				</label>
			</div>
			<% } %>
		</form>
	</div>
</div>
<%- include partials/footer %>